<?xml version="1.0" encoding="UTF-8"?>
<launch>     

  <param name="robot_description" textfile="$(find armbot_description)/urdf/model_best/armbot.gazebo.urdf" />

  <param name="keyboard_description" textfile="$(find keyboard_description)/urdf/keyboard.xacro" />

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
      <rosparam param="/source_list">["/joint_states"]</rosparam>
  </node>


  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find armbot_description)/worlds/scene.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="armbot" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model armbot -param robot_description"/>

  <node name="keyboard" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model keyboard -param keyboard_description"/>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam command="load" file="$(find armbot_description)/config/armbot.gazebo.yaml" />

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/armbot" args="joint_state_controller
            joint_1_position_controller
            joint_2_position_controller
            joint_3_position_controller
            joint_4_position_controller
            joint_grip_position_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" >
    <param name="publish_frequency" type="double" value="40.0" />
    <remap from="/joint_states" to="/armbot/joint_states" />
  </node>

  <!-- change joint
  rostopic pub /armbot/joint_1_position_controller/command std_msgs/Float64 "data: +1.9" -->

</launch>
