<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="use_gui" default="true" />

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam command="load" file="$(find moveit_config_armbot_best)/config/ros_controllers.yaml" />

  <param name="robot_description" textfile="$(find armbot_description)/urdf/model_best/armbot.gazebo.urdf" />

  <param name="keyboard_description" textfile="$(find keyboard_description)/urdf/keyboard.xacro" />

  <param name="use_controller_manager" value="false" />
  <param name="trajectory_execution/execution_duration_monitoring" value="false" />
  <param name="moveit_controller_manager" value="moveit_simple_controller_manager/MoveItSimpleControllerManager" />

<!--   <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="$(arg use_gui)" />
    <rosparam param="/source_list">[/armbot/joint_states]</rosparam>
  </node> -->


  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find armbot_description)/worlds/scene.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="armbot" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model armbot -param robot_description -z 0.965"/>

 <!--  <node name="keyboard" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model keyboard -param keyboard_description"/> -->

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/armbot" args="
    --namespace=/armbot
    joint_state_controller
    arm_controller
    --timeout 20
   "/>

  <!-- convert joint states to TF transforms for rviz, etc -->
<!--   <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" >
    <remap from="/joint_states" to="/armbot/joint_states" />
  </node> -->

  <!-- Подключение  joint_subscriber -->
  <!-- <node name="joint_subscriber" pkg="armbot_move" type="joint_subscriber"/> -->

</launch>
