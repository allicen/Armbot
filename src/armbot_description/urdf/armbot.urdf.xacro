<?xml version="1.0"?>
<!-- Open_Manipulator Chain -->
<robot name="armbot" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Import Rviz colors -->
    <xacro:include filename="$(find armbot_description)/urdf/materials.xacro" />

    <!-- Base link -->
    <link name="base">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://armbot_description/meshes/base.obj" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
    </link>

    <link name="motors">
        <visual>
            <origin xyz="0 0 0.045"/>
            <geometry>
                <mesh filename="package://armbot_description/meshes/link0.obj" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
    </link>

    <joint name="base_to_motors" type="continuous">
        <parent link="base" />
        <child link="motors" />
        <axis xyz="0 0 1" />
        <safety_controller k_velocity = "1" k_position = "1" soft_lower_limit = "-1.57" soft_upper_limit = "1.57" />
    </joint>

    <link name="link2_horizontal_bottom">
<!--        <visual>-->
<!--            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>-->
<!--            <geometry>-->
<!--                <mesh filename="package://armbot_description/meshes/link1.obj" scale="0.01 0.01 0.01"/>-->
<!--            </geometry>-->
<!--        </visual>-->
        <visual>
            <origin xyz="0 0 0" rpy="0 -${pi*3} 0"/>
            <geometry>
                <mesh filename="package://armbot_description/meshes/link2.obj" scale="0.01 0.01 0.01"/>
            </geometry>
            <material name="grey"/>
        </visual>
    </link>

    <joint name="motors_to_link2_horizontal_bottom" type="fixed">
        <parent link="motors" />
        <origin xyz="-0.0052 0.01 0.45"/>
        <child link="link2_horizontal_bottom" />
    </joint>

    <link name="link3_vertical">
        <visual>
            <origin xyz="0 0 0" rpy="0 -${pi/2} 0"/>
            <geometry>
                <mesh filename="package://armbot_description/meshes/link3.obj" scale="0.01 0.01 0.01"/>
            </geometry>
            <material name="grey"/>
        </visual>
    </link>

    <joint name="link2_horizontal_bottom_link3_vertical" type="continuous">
        <parent link="link2_horizontal_bottom" />
        <child link="link3_vertical" />
        <axis xyz="0 1 0" />
        <origin xyz="-0.5 0.01 0"/>
        <safety_controller k_velocity = "1" k_position = "1" soft_lower_limit = "-1.57" soft_upper_limit = "1.57" />
    </joint>

    <link name="link4_horizontal_top_long">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://armbot_description/meshes/link4.obj" scale="0.01 0.01 0.01"/>
            </geometry>
            <material name="grey"/>
        </visual>
    </link>

    <joint name="link3_vertical_to_link4_horizontal_top_long" type="continuous">
        <parent link="link3_vertical" />
        <child link="link4_horizontal_top_long" />
        <axis xyz="0 1 0" />
        <origin xyz="0 0.085 2"/>
        <safety_controller k_velocity = "1" k_position = "1" soft_lower_limit = "-1.57" soft_upper_limit = "1.57" />
    </joint>

    <link name="tool">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://armbot_description/meshes/tool.obj" scale="0.01 0.01 0.01"/>
            </geometry>
            <material name="grey"/>
        </visual>
    </link>

    <joint name="link4_horizontal_top_long_to_tool" type="fixed">
        <parent link="link4_horizontal_top_long" />
        <child link="tool" />
        <origin xyz="2.5 -0.1 0"/>
    </joint>

</robot>