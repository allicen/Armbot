<?xml version="1.0"?>
<!-- Open_Manipulator Chain -->
<robot name="armbot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find armbot_description)/urdf/materials.xacro" />

  <!-- World -->
  <link name="base_link">
  </link>

  <!-- World fixed joint-->
  <joint name="world_fixed" type="fixed">
    <origin xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="base"/>
  </joint>

  <!-- Base link -->
  <link name="base">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://armbot_description/meshes/base.obj" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="link0">
    <visual>
      <origin xyz="0 0 0.045" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://armbot_description/meshes/link0.obj" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="blue123">
        <color rgba="0 0.8 1" />
      </material>
    </visual>
  </link>

  <link name="link1">
