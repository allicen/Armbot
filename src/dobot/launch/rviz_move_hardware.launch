<launch>
  <arg
    name="dobot" />
  <arg
    name="gui"
    default="True" />
  <param
    name="robot_description"
    textfile="$(find dobot)/urdf/dobot.urdf" />
  <param
    name="use_gui"
    value="$(arg gui)" />

  <node
    name="DobotServer"
    pkg="dobot"
    type="DobotServer"
    args="/dev/ttyUSB0" />

  <node
    name="DobotClient_topic"
    pkg="dobot"
    type="DobotClient_topic" />

  <node
    name="dobot_move_publisher"
    pkg="dobot"
    type="dobot_move_publisher" />

  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(find dobot)/config/dobot.rviz"/>

  <node
    name="robot_state_publisher"
    pkg="robot_state_publisher"
    type="state_publisher" />

  <node
    name="dobot_state_publisher"
    pkg="dobot"
    type="dobot_state_publisher" />


</launch>
